<%- include partials/header %>
<div class="container">
  <div class="row">
    <div class="wrap-login col-md-4 col-md-offset-4">
      <h2 class="text-center">New Review for <%= album.title %></h2>
      <form method="post" action="/albums/<%= album.id %>/reviews/new">
        <div class="form-group">
          <textarea name="content" rows="8" cols="80" class="form-control" required></textarea>
        </div>
        <input type="submit" class="btn-login btn btn-default submit-review"></input>
      </form>
    </div>
  </div>
</div>
<%- include partials/footer %>

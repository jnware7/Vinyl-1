<%- include partials/header %>
	<div class="container">
		<div class="row">
			<div class="wrap-login col-md-4 col-md-offset-4">
				<% if (message.length > 0) { %>
					<div class="alert alert-danger text-center" role="alert">
					<%= message %>
					</div>
					<% } %>
				<h2 class="text-center">Sign up for Vinyl</h2>
				<form method="post" action="/sign-up">
					<div class="form-group">
						<label for="username">Name</label>
						<input type="text" name="name" class="form-control" placeholder="Jane Doe" required>
					</div>
					<div class="form-group">
						<label for="email">Email address</label>
						<input type="email" name="email" class="form-control" placeholder="email@email.com" required>
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<input type="password" name="password" class="form-control" placeholder="password" required>
					</div>
					<input type="submit" class="btn-login btn btn-default"></input>
				</form>
			</div>
		</div>
</div>
<%- include partials/footer %>
